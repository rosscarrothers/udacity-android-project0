<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UdacityButton" parent="android:style/Widget.Button" >
        <item name="android:background">@color/udacityOrange</item>
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:onClick">displayMessage</item>
    </style>

</resources>
